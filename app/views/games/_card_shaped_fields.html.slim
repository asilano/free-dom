.card-select-row
  = hidden_field_tag :next_ix, ix + 1
  .pile-label= label_tag("cards_#{ix + 10}", "Card-shaped thing #{ix + 1}: ")
  .pile-select= select_tag("#{object_name}[params][card_list][]",
                          option_groups_from_collection_for_select(GameEngine::Card.randomised_card_shaped_things,
                                                                    :card_classes,
                                                                    :readable_name,
                                                                    :name,
                                                                    :readable_name,
                                                                    value),
                          id: "cards_#{ix + 10}")
  = button_tag "X", name: "delete-fields", value: ix + 10, class: "button alert delete-card_shaped", type: "submit", data: { action: "click->repeatable-field#delete"}
